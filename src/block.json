{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "smark/text-shadower",
  "version": "0.1.0",
  "title": "Text Shadower",
  "category": "text",
  "icon": "cloud",
  "description": "Text Shadower: A WordPress block that renders the effect of text casted in shadow.",
  "supports": {
    "align": true,
    "html": false,
    "color": {
      "background": true,
      "text": true
    },
    "spacing": {
      "padding": true,
      "margin": false
    }
  },
  "attributes": {
    "style": {
      "type": "object",
      "default": {
        "color": {
          "background": "#F9F9F9",
          "text": "#D61912"
        }
      }
    },
    "align": {
      "type": "string",
      "default": "full"
    },
    "textinput": {
      "type": "string",
      "default": "Shadow DOM",
      "source": "text",
      "selector": "div"
    },
    "textalign": {
      "type": "string",
      "default": "center"
    },
    "styleclass": {
      "type": "string",
      "default": "elegantshadow"
    },
    "boxwidth": {
      "type": "number",
      "default": 1500
    },
    "fontsize": {
      "type": "number",
      "default": 9
    }
  },
  "styles": [
    {
      "name": "rounded",
      "label": "Rounded"
    },
    {
      "name": "squared",
      "label": "Squared",
      "isDefault": true
    }
  ],
  "example": {
    "attributes": {
      "textinput": "Shadow DOM",
      "styleclass": "retroshadow",
      "fontsize": 12
    },
    "style": {
      "padding": "1em"
    }
  },
  "textdomain": "smark",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css"
}
